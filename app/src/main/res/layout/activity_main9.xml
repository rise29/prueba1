
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:scaleType="centerCrop">


    <TextView
    android:id="@+id/estadisticas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24sp"
    android:text="Estadisticas"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:layout_leftHorizontal="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="16dp"
    android:paddingTop="25dp" />

    <TextView
        android:id="@+id/textz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Resumen de tareas"
        android:textColor="#FFFFFF"
        android:layout_below="@id/estadisticas"
        android:layout_leftHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:paddingTop="25dp" />


    <LinearLayout
        android:id="@+id/superior"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/textz">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_blue_border"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareas pendientes"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_blue_border"
        android:padding="16dp">

        <TextView
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareas completadas"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/icon18"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon6"
        android:layout_alignParentStart="true"
        android:layout_below="@id/superior"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd/mm/aaaa"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/superior"
        android:layout_toEndOf="@id/icon18"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/textx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Tareas completadas"
        android:textColor="#FFFFFF"
        android:layout_below="@id/text22"
        android:layout_leftHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:paddingTop="25dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagen4"
        android:layout_below="@id/textx"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#262626"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon1" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon2" />

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:src="@drawable/icon3"
            />

        <ImageView
            android:id="@+id/icon4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon4"
            android:background="#000000"/>

        <ImageView
            android:id="@+id/icon5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon5"
            />


    </LinearLayout>


</RelativeLayout>