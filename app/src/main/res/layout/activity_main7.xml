<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:scaleType="centerCrop">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icono1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/tareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Tarea"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_toEndOf="@id/icon"
        android:layout_leftHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:paddingTop="35dp" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Mi primer tarea"
        android:textColor="#FFFFFF"
        android:layout_below="@id/tareas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:paddingTop="30dp" />

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/icon7" />

    <ImageView
        android:id="@+id/icon12"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="290dp"/>

    <TextView
        android:id="@+id/textWithLineBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar subtarea"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@id/icon12"
        android:layout_marginStart="14dp"
        android:layout_marginTop="290dp"/>

    <View
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A9A9A9"
        android:layout_below="@id/textWithLineBelow"
        android:layout_marginTop="14dp" />
    <ImageView
        android:id="@+id/icon13"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon8"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linea"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/linea"
        android:layout_toEndOf="@id/icon13"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp" />

    <View
        android:id="@+id/linea2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"
        android:layout_below="@id/text13"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/icon14"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon13"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linea2"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/linea2"
        android:layout_toEndOf="@id/icon13"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp" />

    <View
        android:id="@+id/linea3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"
        android:layout_below="@id/text14"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/icon15"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon14"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linea3"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/linea3"
        android:layout_toEndOf="@id/icon13"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp" />

    <View
        android:id="@+id/linea4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A9A9A9"
        android:layout_below="@id/text15"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/icon16"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon19"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linea4"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordatorio"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/linea4"
        android:layout_toEndOf="@id/icon13"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp" />

    <View
        android:id="@+id/linea5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A9A9A9"
        android:layout_below="@id/text16"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/icon17"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon20"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linea5"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar notas"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/linea5"
        android:layout_toEndOf="@id/icon13"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp" />

    <View
        android:id="@+id/linea6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"
        android:layout_below="@id/text17"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/icon18"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon21"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linea6"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repetir tarea"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/linea6"
        android:layout_toEndOf="@id/icon13"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp" />

    <View
        android:id="@+id/linea7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"
        android:layout_below="@id/text18"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/icon19"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon18"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linea7"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elminar"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/linea7"
        android:layout_toEndOf="@id/icon13"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp" />



    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#262626"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon1" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon2"
            android:background="#000000"/>

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:src="@drawable/icon3"
            />

        <ImageView
            android:id="@+id/icon4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon4" />

        <ImageView
            android:id="@+id/icon5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/icon5" />


    </LinearLayout>



</RelativeLayout>